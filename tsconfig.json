{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "strictNullChecks": false,
        "sourceMap": false,
        "allowJs": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "paths": {
            "*": [
                "./node_modules/*",
                "./src/types/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}